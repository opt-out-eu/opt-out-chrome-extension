{
  "name": "Opt Out",
  "version": "1.02",
  "description": "Short Description: Get thousands of organisations to erase your personal data. Send GDPR Erasure request (right to be forgotten) with a click of a button.",
  "content_security_policy": "default-src 'none'; script-src 'self'; connect-src https://api.opt-out.eu/companies",
  "background": {
    "scripts": [
      "psl.min.js",
      "background.js"
    ]
  },
  "browser_action": {
      "default_icon": "icon16.png",
      "default_title": "Opt Out"
  },
  "permissions": [
      "tabs",
      "https://api.opt-out.eu/companies*"
  ],
  "icons" : {
    "48" : "icon-48.png",
    "128" : "icon-128.png"
  },
  "manifest_version": 2
}
