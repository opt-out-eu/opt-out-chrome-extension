{
  "name": "Opt Out - automated GDPR and CCPA requests",
  "version": "1.5",
  "description": "Get thousands of organisations to erase your personal data. Easily send GDPR and CCPA erasure (right to be forgotten) requests.",
  "content_security_policy": "default-src 'none'; script-src 'self'; connect-src https://api.yourdigitalrights.org/companies",
  "background": {
    "scripts": [      
      "psl.min.js",
      "background.js"
    ]
  },
  "browser_action": {
      "default_icon": "icon-16.png",
      "default_title": "Opt Out"
  },
  "permissions": [
      "tabs",
      "https://api.yourdigitalrights.org/companies*"
  ],
  "icons" : {
    "48" : "icon-48.png",
    "128" : "icon-128.png"
  },
  "manifest_version": 2
}
